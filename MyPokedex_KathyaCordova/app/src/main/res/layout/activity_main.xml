<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/brown"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Pokedex"
        android:textColor="@color/brown_black"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

    <View
        android:layout_width="400dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_height="8dp"
        android:background="@color/white_flat"/>


    <ListView
        android:id="@+id/pokemonList"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="500dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/brown_flat"/>

    <View
        android:layout_width="400dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_height="8dp"
        android:background="@color/white_flat"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Register pokemon"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/pink"
        android:id="@+id/addPokemon" />


</LinearLayout>